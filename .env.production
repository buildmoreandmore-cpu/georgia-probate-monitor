# Production Environment Variables for Vercel

# Database - Use temporary directory in Vercel
DATABASE_URL="file:./tmp/database.db"

# Address Standardization (free for Vercel deployment)
ADDRESS_PROVIDER="free"

# Phone Enrichment (CSV only for Vercel deployment)  
PHONE_PROVIDER="csv"

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=30

# Scraping Configuration (conservative for serverless)
SCRAPE_DELAY_MS=3000
SCRAPE_CONCURRENT_LIMIT=1
USER_AGENT_ROTATION=false

# Counties to Monitor
ENABLED_COUNTIES="cobb,dekalb,fulton"

# Application Settings
NODE_ENV="production"
NEXT_PUBLIC_APP_NAME="Georgia Probate Monitor"